author = {Dalmau, Ramon and Melgosa, Marc and Vilardaga, Santi and Prats, Xavier},
booktitle = {8th International Conference on Research in Air Transportation (ICRAT)},
title = {{A Fast and Flexible Aircraft Trajectory Predictor and Optimiser for ATM Research Applications}},
year = {2018}
